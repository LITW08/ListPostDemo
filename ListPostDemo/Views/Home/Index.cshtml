@model HomePageViewModel
@if (!String.IsNullOrEmpty(Model.Message))
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
}

<div class="col-md-8 offset-md-2 jumbotron">
    <h1>Add Food</h1>
    <form method="post" action="/home/addfood">
        <input type="text" name="name" placeholder="Name" class="form-control" />
        <br />
        <br />
        <input type="text" name="price" placeholder="Price" class="form-control" />
        <br />
        <br />
        <input type="text" name="caloriecount" placeholder="Calories" class="form-control" />
        <br />
        <br />
        <button class="btn btn-danger btn-lg btn-block">Add</button>
    </form>
</div>